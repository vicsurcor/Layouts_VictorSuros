<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/botonSuperior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Boton Superior"
        android:backgroundTint="#006665"
        android:textSize="20sp" />

    <Button
        android:id="@+id/botonCentroDerecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:backgroundTint="#006665"
        android:text="Boton Centro Derecha"
        android:textSize="20sp" />

    <Button
        android:id="@+id/botonInferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:text="Boton Inferior"
        android:backgroundTint="#006665"
        android:textSize="20sp" />
</FrameLayout>